= form_for @pro_con, class: 'form-horisontal' do |f|
  - if @pro_con.errors.any?
    #error_explanation
      %h2= "#{pluralize(@pro_con.errors.count, "error")} prohibited this pro_con from being saved:"
      %ul
        - @pro_con.errors.full_messages.each do |msg|
          %li= msg

  .field
    / = f.label :body
    %div.form-group
      %label.col-sm-1.control-label{style:'padding-right: 5px;'}
        = render 'avatar', user: current_user_or_visitor
      %div.col-sm-11
        = f.text_area :body, class: "form-control", rows: "2"
  .field
    = f.hidden_field :cons, value: $con
  / .field
  /   = @pro_con.discussion.user.name
  .actions
    = f.submit 'Save', class: 'btn btn-primary', style: 'margin-top: 10px;' 



